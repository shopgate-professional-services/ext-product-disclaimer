{
  "version": "1.0.1-beta.1",
  "id": "@shopgate-project/product-disclaimer",
  "components": [
    {
      "id": "PopupContent",
      "path": "frontend/portals/PopupContent",
      "target": "product.description.after",
      "type": "portals"
    }
  ],
  "configuration": {
    "triggerProperty": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "name": "overlay",
        "value": "yes"
      },
      "params": {
        "type": "json",
        "label": "Product property to trigger show of disclaimer"
      }
    },
    "header": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "text",
        "label": "The header of popup content"
      }
    },
    "content": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "type": "text",
        "label": "Content to show (can be in html format)"
      }
    },
    "memoization": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "limit": 200,
        "ttl": 7776000
      },
      "params": {
        "type": "json",
        "label": "Cache of shown disclaimer (fifo based)"
      }
    },
    "buttons": {
      "type": "admin",
      "destination": "frontend",
      "default": [ ],
      "params": {
        "type": "json",
        "label": "Buttons to show underneath content"
      }
    },
    "styles": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "content": null,
        "button": null
      },
      "params": {
        "type": "json",
        "label": "Styles to apply to content and buttons"
      }
    }
  },
  "steps": [ ]
}
